<%= simple_form_for(@customer, html: { class: 'form-horizontal' }, data: {conifrm: "Are you sure ?"}) do |form| %>
  <%= form.input :name %>
  <%= form.input :address_line1 %>
  <%= form.input :address_line2 %>
  <%= form.input :city_village %>
  <%= form.input :district %>
  <%= form.input :state %>
  <%= form.input :pin %>
  <%= form.input :mobile, input_html: { value: form.object.mobile || current_user.mobile } %>
  <%= form.button :submit %>
<% end %>
